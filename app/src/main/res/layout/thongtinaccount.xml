<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close_thongtin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ar1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_thongtin"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/minhdat" />
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Trương Minh Đạt"
            android:fontFamily="sans-serif"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/cam"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:fontFamily="sans-serif"/>
            <ImageView
                android:layout_marginRight="12dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/coin" />
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Khách hàng mới"
                android:fontFamily="sans-serif"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_thongtin1"
        android:gravity="center"
        android:background="@color/bg_chinh"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_thongtin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_marginLeft="210dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"
            android:textSize="13sp"
            android:textColor="@color/blue"
            android:fontFamily="sans-serif"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_thongtin2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_below="@+id/ll_thongtin1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black_1"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anh Nguyên"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:textSize="20sp"

            android:background="@color/black_1"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thongtin3"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_below="@+id/ll_thongtin2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinh nhật"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black_1"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Chưa cập nhật]"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:textSize="20sp"

            android:background="@color/black_1"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_below="@+id/ll_thongtin3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black_1"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minhdat@@gmail.com"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:textSize="20sp"
            android:background="@color/black_1"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>