<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/bg_chinh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbar_giupdo"
            android:id="@+id/tool_giupdo">
        </include>
        <LinearLayout
            android:layout_below="@+id/tool_giupdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điều Khoản Sử Dụng"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="90dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Coffee House Delivery"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qui định về phạm vi giao hàng"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/noiqui1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qui định về phí giao hàng"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/noiqui1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qui định về địa điểm giao hàng"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/noiqui1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qui định về thời gian giao hàng"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/noiqui1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hình thức thanh toán"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/noiqui1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
