        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:background="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/gioithieu"
        android:layout_below="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Giới thiệu món"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:background="@color/black" />
        <TextView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Cà phê phin kết hợp cùng sữa đặc là đặc sản của người Việt Nam, được xem là món uống tự hào của ngưởi Việt Nam."
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            android:background="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dat"
        android:gravity="center_vertical"
        android:layout_below="@id/gioithieu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tru"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tru"/>
        <TextView
            android:id="@+id/soluonghang"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/cong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plus"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="126dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:background="@drawable/botron2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="32.000 đ"
            android:id="@+id/tongtien"/>
    </LinearLayout>


