<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/bg_chinh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_if_thongbao"
        layout="@layout/tool_if_thongbao">
    </include>
    <LinearLayout
        android:id="@+id/thongbao1"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tool_if_thongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/coupon"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành viên thân thiết ơi,"/>
            <TextView
                android:padding="2dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thưởng thức bánh ngon hoặc hẹn hò cùng nhóm uống trà, cà phê với bộ coupon dành riêng cho bạn...">
            </TextView>
            <TextView
                android:padding="2dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ 6 tuần trước lúc 11:44"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/thongbao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/thongbao2"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành viên thân thiết ơi,"/>
            <TextView
                android:padding="2dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thưởng thức bánh ngon hoặc hẹn hò cùng nhóm uống trà, cà phê với bộ coupon dành riêng cho bạn...">
            </TextView>
            <TextView
                android:padding="2dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ 6 tuần trước lúc 11:44"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>